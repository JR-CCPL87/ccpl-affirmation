<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>

	<definition name="/*/*" template="/WEB-INF/tiles/layout_templates/template.jsp">
        <put-attribute name="meta" value="/WEB-INF/tiles/layout_templates/meta.jsp" />
        <put-attribute name="tabs" value="/WEB-INF/tiles/layout_templates/tabs.jsp" />
        <put-attribute name="header" value="/WEB-INF/tiles/layout_templates/header.jsp" />
        <put-attribute name="body" value="/WEB-INF/tiles/{1}/{2}.jsp" />
        <put-attribute name="footer" value="/WEB-INF/tiles/layout_templates/footer.jsp" />

    </definition> 
    
    <definition name="/login" template="/WEB-INF/tiles/layout_templates/login-template.jsp">
        <put-attribute name="meta" value="/WEB-INF/tiles/layout_templates/meta.jsp" />
        <put-attribute name="body" value="/WEB-INF/tiles/login.jsp" />
        <put-attribute name="footer" value="/WEB-INF/tiles/layout_templates/footer.jsp" />
        
    </definition> 
    
    <definition name="/*" template="/WEB-INF/tiles/layout_templates/template.jsp">
        <put-attribute name="meta" value="/WEB-INF/tiles/layout_templates/meta.jsp" />
        <put-attribute name="tabs" value="/WEB-INF/tiles/layout_templates/tabs.jsp" />
        <put-attribute name="header" value="/WEB-INF/tiles/layout_templates/header.jsp" />
        <put-attribute name="body" value="/WEB-INF/tiles/{1}.jsp" />
        <put-attribute name="footer" value="/WEB-INF/tiles/layout_templates/footer.jsp" />

    </definition> 
 
</tiles-definitions>